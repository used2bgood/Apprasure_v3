{% extends 'base.njk' %}

{# This sets the title for the browser tab on this page #}
{% set pageTitle = "Client Portal | AppraSure" %}

{% block content %}

    <!-- === INTEGRATED ONBOARDING PORTAL SECTION === -->
    <section class="portal-section">
        <h2>Client Onboarding Portal</h2>
        <p>
            Welcome to the AppraSure client portal. Please complete the secure form below to begin the
            onboarding process for your claim.
        </p>
        <div class="portal-iframe-container">
            <iframe
                class="portal-iframe"
                src="https://portal.apprasure.com/Onboarding"
                title="AppraSure Client Onboarding Portal"
                frameborder="0">
            </iframe>
        </div>
    </section>
    <!-- === END OF SECTION === -->

    <style>
        /* Styles for the integrated portal section */
        .portal-section {
            padding: 2rem 1rem;
            max-width: 1100px;
            margin: 2rem auto;
            background: rgba(250, 250, 245, .85);
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        }
        .portal-section h2 {
            font-size: 2.8rem;
            color: var(--primary-color); /* Uses variable from your main CSS */
            margin-bottom: 1rem;
        }
        .portal-section p {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 2.5rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }
        .portal-iframe-container {
            background: #ffffff;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
            border: 1px solid rgba(0,0,0,0.08);
            min-height: 900px; /* Provides a container height */
        }
        .portal-iframe {
            width: 100%;
            height: 900px; /* A good default height */
            border: none;
            display: block;
        }
        @media (max-width: 768px) {
            .portal-section {
                padding: 1rem 0.5rem;
            }
            .portal-iframe {
                height: 1200px; /* Taller on mobile where elements stack */
            }
        }
    </style>

{% endblock %}
